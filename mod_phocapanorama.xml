	<config>
		<fields name="params">
      <fieldset name="basic" addfieldpath="/administrator/components/com_phocapanorama/models/fields">

         <field name="id" type="phocapanoramaitem" section="com_phocapanorama" class="inputbox" default="0" label="MOD_PHOCAPANORAMA_FIELD_SELECT_ITEM_LABEL" description="MOD_PHOCAPANORAMA_FIELD_SELECT_ITEM_DESC" required="true"/>
      </fieldset>

		</fields>
	</config>

	<updateservers>
		<server type="extension" name="MOD_PHOCAPANORAMA" priority="1"><![CDATA[https://raw.githubusercontent.com/PhocaCz/PhocaPanoramaModule/master/manifest.xml]]></server>
	</updateservers>
</extension>
