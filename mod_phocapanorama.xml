	<author>Jan Pavelka (www.phoca.cz)</author>
	<creationDate>07/05/2019</creationDate>
	<authorEmail></authorEmail>
	<authorUrl>https://www.phoca.cz</authorUrl>
	<copyright>Jan Pavelka</copyright>
	<license>GNU/GPL</license>
	<version>3.0.3</version>
	<description>MOD_PHOCAPANORAMA_DESCRIPTION</description>
	<projectName>PhocaPanoramaModule</projectName>

	<files>
		<folder>tmpl</folder>
		<filename module="mod_phocapanorama">index.html</filename>
		<filename module="mod_phocapanorama">manifest.xml</filename>
		<filename module="mod_phocapanorama">mod_phocapanorama.php</filename>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_phocapanorama.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.mod_phocapanorama.sys.ini</language>
